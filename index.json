{
    "$schema": "http://json.schemastore.org/prettierrc",
    "singleQuote": false,
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "arrowParens": "always",
    "semi": true,
    "bracketSpacing": true,
    "vueIndentScriptAndStyle": false,
    "bracketSameLine": true,
    "overrides": [
        {
            "files": ["*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
